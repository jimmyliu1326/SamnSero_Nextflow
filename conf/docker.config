        container = 'biocontainers/porechop'
    }
    withName:flye {
        container = 'staphb/flye'
    }
    withName:medaka {
        container = 'staphb/medaka'
    }
    withName:sistr {
        container = 'staphb/sistr'
    }
    withName:abricate {
        container = 'staphb/abricate'
    }
    withName:makeblastdb {
        container = 'staphb/abricate'
    }
    withName:abricate_custom {
        container = 'staphb/abricate'
    }
    withName:abricate_summary {
        container = 'staphb/abricate'
    }
