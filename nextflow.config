manifest {
    author = "Jimmy Liu"
    version = "1.5"
    name = "SamnSero"
    mainScript = "SamnSero.nf"
    nextflowVersion = ">=21.0.0"
    manifest.defaultBranch = "main"
}

params {
    input = null
    outdir = null
    notrim = null
    help = null
    qc = null
    annot = null
    trim = null
    nanohq = null
    gpu = null
    version = null
    host = null
    centrifuge = "/mnt/e/data/reference/centrifuge/"
    noreport = null
    taxon_name = "Salmonella enterica"
    taxon_level = "species"
}

process {
    withLabel:process_low {
        cpus = { 4 }
        memory = { 8.GB }
        time = { 2.h }
    }
    withLabel:process_medium {
        cpus = { 16 }
        memory = { 16.GB }
        time = { 4.h }
    }
    withLabel:process_high {
        cpus = { 32 }
        memory = { 32.GB }
        time = { 8.h }
    }
}

// run processes in docker containers
includeConfig 'conf/docker.config'

// Trace pipeline execution metrics
timeline {
    enabled = true
    file    = "${params.outdir}/pipeline_info/execution_timeline.html"
}
report {
    enabled = true
    file    = "${params.outdir}/pipeline_info/execution_report.html"
}
trace {
    enabled = true
    file    = "${params.outdir}/pipeline_info/execution_trace.txt"
}
dag {
    enabled = true
    file    = "${params.outdir}/pipeline_info/pipeline_dag.html"
}